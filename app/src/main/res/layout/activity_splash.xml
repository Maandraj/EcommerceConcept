<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:background="@color/color_second"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_mock_logo"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_logo"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@drawable/orange_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="132dp"
        tools:layout_width="132dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:alpha=".0"
        android:text="@string/ecommerce_concept_logo"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:theme="@style/TextTitleStyle"
        app:layout_constraintBottom_toBottomOf="@+id/view_mock_logo"
        app:layout_constraintStart_toStartOf="@+id/view_mock_logo"
        app:layout_constraintTop_toTopOf="@+id/view_mock_logo"
        tools:alpha="1" />
</androidx.constraintlayout.widget.ConstraintLayout>